<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <div class="row"><div class="col-md-6"><%= f.input :email %></div><div class="col-md-6">
    <%= f.input :phone %></div></div>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Send enquiry', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
