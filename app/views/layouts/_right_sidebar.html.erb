<% if current_page?(root_path) or current_page?('/' + params[:country_name].to_s) %>
	<div class="well">
		<h4>Filter by country</h4>
		<% @hackathon_countries.each do |hackathon_country| %>
			<a href="/<%= ISO3166::Country[hackathon_country] %>" class=""><%= ISO3166::Country[hackathon_country] %> <span class="label"><%= Hackathon.where(country: hackathon_country).count %></span></a><br>
			
		<% end %>
		<%= link_to 'ALL HACKATHONS', root_path, class: 'btn btn-primary btn-xs' %>
	</div>

	<div class="well">
		<h4>Filter by tags</h4>
		<% @tags.most_used.each do |tag| %>
			<%= link_to tag.name.capitalize, root_path(tag: tag.name) %> <span class="label"><%= tag.taggings_count %></span><br>
			
		<% end %>
		<%= link_to 'ALL HACKATHONS', root_path, class: 'btn btn-primary btn-xs' %>
	</div>
<% end %>

<div class="well">
	<h4>Want the latest hackathons in your inbox weekly?</h4>
	<a href="/subscribers/new" class="btn btn-primary btn-xs">
	  Get updates
	</a>
</div>

